<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <script defer src="/js/contacts.js"></script>
  <title>Contact Us - NewsPortal</title>
</head>
<body>
  <!-- Include the Navbar -->
  <%- include('partials/navbar.ejs') %>

  <!-- Contact Section -->
  <section class="contact-section">
    <div class="container">
      <h1>Contact Us</h1>
      <p>If you have any questions, feedback, or inquiries, feel free to reach out to us using the form below.</p>
      <form class="contact-form" action="/submit-contact" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="Your Name" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Your Email" required>
        </div>
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" placeholder="Your Message" required></textarea>
        </div>
        <button type="submit" class="btn">Send Message</button>
      </form>
    </div>
  </section>

  <!-- Admin Section -->
  <section class="admin-section">
    <div class="container">
      <h2>Admin Access</h2>
      <form id="admin-login-form">
        <div class="form-group">
          <label for="admin-password">Enter Admin Password</label>
          <input type="password" id="admin-password" placeholder="Admin Password" required>
        </div>
        <button type="button" class="btn" id="admin-login-btn">Login</button>
      </form>

      <div id="admin-messages" class="hidden">
        <h3>User Messages</h3>
        <ul id="messages-list">
          <!-- Messages will be dynamically inserted here -->
        </ul>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <p>&copy; 2025 NewsPortal. All rights reserved.</p>
  </footer>
</body>
</html>